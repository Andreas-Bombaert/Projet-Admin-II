options{
    directory "/var/cache/bind";

    listen-on {any; };
    listen-on-v6 { none; };
    recursion no;

    allow-recursion{ none; };
    allow-query {
        192.168.1.0/24;
        192.168.2.0/24;
        192.168.3.0/24;
        192.168.4.0/24;
    }

    allow-transfer {
        none;
    };

    pid-file "/var/run/named/named.pid";
}